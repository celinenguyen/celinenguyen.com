<section class="reading-2020">
  <ol class="reading-list">
    {% for book in Books2020 %}
      <li class="reading-list-book">
        {% if book.cover %}
          <div class="reading-list-book-cover">
            {% set coverURL = "/reading/covers/" + book.cover %}
            <img src={{ coverURL }}>
          </div>
        {% endif %}
        <div class="reading-list-book-title">
          {{ book.title }}
        </div>
        {% if book.author != "Various" %}
        <div class="reading-list-book-author">
          {{ book.author }}
        </div>
        {% endif %}
        {% if book.summary %}
        <p class="reading-list-book-summary">
          {{ book.summary }}
        </p>
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</section>
