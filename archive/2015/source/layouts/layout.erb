<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= current_page.data.title || "Celine Nguyen" %></title>
    <%= stylesheet_link_tag "normalize" %>
    <%= stylesheet_link_tag "all" %>
    <% if (defined? current_page.data.style) %>
      <%= stylesheet_link_tag current_page.data.style %>
    <% end %>
    <%= javascript_include_tag  "all" %>
    <% if (defined? current_page.data.script) %>
      <%= javascript_include_tag  current_page.data.script %>
    <% end %>
    <%= typekit "vgm3odn" %>
  </head>
  
  <body class="<%= page_classes %> <%= current_page.data.bodyclass %>">
    <%= partial "header" %>
    <div id="main">
      <section>
      <%= yield %>
      </section>
    </div>
    <%= partial "footer" %>
  </body>
</html>